<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.backend.mapper.UserMapper">

    <update id="update" parameterType="org.example.backend.pojo.vo.UserVO">
        UPDATE users
        <set>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="nickname != null">
                nickname = #{nickname},
            </if>
            <if test="role != null">
                role = #{role},
            </if>
            <if test="register_time != null">
                register_time = #{register_time},
            </if>
            <if test="login_time != null">
                login_time = #{login_time},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="personality != null">
                personality = #{personality},
            </if>
            <if test="personal_description != null">
                personal_description = #{personal_description},
            </if>
            <if test="birthday != null">
                birthday = #{birthday},
            </if>
            <if test="phone_number != null">
                phone_number = #{phone_number},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="avatar_url != null">
                avatar_url = #{avatar_url},
            </if>
            <if test="is_active != null">
                is_active = #{is_active},
            </if>
            <if test="sex != null">
                sex = #{sex}
            </if>
        </set>
        WHERE id = #{id}
    </update>

</mapper>
